<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/pausehide"

    android:layout_height="wrap_content">
<android.support.design.widget.CoordinatorLayout

    android:orientation="vertical"
    android:elevation="5dp"

    android:background="@color/white_greyish"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:id="@+id/c1"
            app:cardElevation="5dp"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/timercard"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/task"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="TASK NAME"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/background" />
                    <ImageButton
                        android:id="@+id/action_attach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_margin="5dp"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/ic_attach" />
                    <ImageButton
                        android:id="@+id/action_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/ic_video" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/background"/>

                <TextView
                    android:id="@+id/taskdescrip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="start"
                    android:text=""
android:textColor="@android:color/black"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="*R. QTY:"
                        android:textColor="@color/pauseBtn"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/requiredunits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text=" 150"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"

                        android:layout_weight="1"
                        android:gravity="start"
                        android:text=" Units"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/unitsdata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:text="UNITS PRODUCED:"
                            android:textColor="@color/pauseBtn"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/unitsleft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text=" "
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#d4d1d1" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/units"

                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:scrollbarSize="2dp"
                        android:layout_marginBottom="10dp"
                        android:scrollbars="horizontal">


                    </android.support.v7.widget.RecyclerView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/undobtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:background="@android:color/transparent"
                                android:src="@mipmap/ic_undo" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/unitsproduced"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="end"
                                    android:singleLine="true"
                                    android:text="0"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"

                                    android:gravity="end"
                                    android:text="Units Produced" />


                            </LinearLayout>

                            <Button
                                android:id="@+id/btnSubmit"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:background="@drawable/buttonglow"
                                android:text="SUMBIT"
                                android:hapticFeedbackEnabled="true"
                                android:textColor="@color/white" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_anchor="@id/c1"
        android:id="@+id/openDialog"
app:fabSize="mini"
        app:backgroundTint="@color/pauseBtn"
        android:tint="@color/white"
        app:elevation="10dp"
        app:borderWidth="0dp"
android:src="@android:drawable/ic_input_add"
        android:hapticFeedbackEnabled="true"
        app:layout_anchorGravity="right|end|bottom"
        android:layout_marginRight="5dp"
        android:layout_marginTop="160dp"
        android:clickable="true"/>

</android.support.design.widget.CoordinatorLayout>

</FrameLayout>